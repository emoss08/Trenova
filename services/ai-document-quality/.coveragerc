# Coverage.py configuration

[run]
source = src
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */venv/*
    */virtualenv/*
    setup.py

branch = True
parallel = True

[report]
precision = 2
show_missing = True
skip_covered = False
skip_empty = True

exclude_lines =
    # Standard pragmas
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:

    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod

    # Don't complain about type checking blocks
    if TYPE_CHECKING:

    # Don't complain about ellipsis in protocols
    \.\.\.

[html]
directory = htmlcov
title = Document Quality Assessment - Coverage Report

[xml]
output = coverage.xml
